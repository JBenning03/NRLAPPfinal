@model IEnumerable<NRLApp.Models.ObstacleListItem>

@{
    ViewData["Title"] = "Registrerte hindre";
}

<div class="screen">
    <h2>REGISTRERTE HINDRE</h2>

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hinder</th>
                    <th>Høyde (m)</th>
                    <th>Status</th>
                    <th>Registrert</th>
                    <th>Innmeldt av</th>
                    <th>Behandlet av</th>
                    <th>Vis</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ObstacleName</td>
                            <td>@item.HeightMeters</td>
                            <td>
                                @if (item.IsDraft)
                                {
                                    <span class="badge bg-secondary">Utkast</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Avventer</span>
                                }
                            </td>
                            <td>@item.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                            @* Disse to er ikke implementert i databasen ennå – vis “-” *@
                            <td>-</td>
                            <td>-</td>

                            <td>
                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-primary btn-sm">
                                    Vis
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            Ingen hindre registrert ennå.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
