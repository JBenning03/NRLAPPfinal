@{
    ViewData["Title"] = "Takk";
    bool draft = (bool)(ViewBag.Draft ?? false);
}
<div class="screen" style="max-width:700px;margin:0 auto;text-align:center;">
    <h2>@(draft ? "UTKAST LAGRET" : "TUSEN TAKK!")</h2>
    <p class="lead">
        @(draft
                ? "Utkastet ble lagret. Du kan komme tilbake og fullføre senere."
                : "Innsendingen din er registrert. Takk for hjelpen!")
    </p>
    <div class="mt-3">
        <a asp-controller="Obstacle" asp-action="Area" class="btn btn-outline-secondary me-2">Registrer nytt</a>
        <a asp-controller="Obstacle" asp-action="Map" class="btn btn-primary">Se på kart</a>
    </div>
</div>
